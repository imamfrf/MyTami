<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/md_white_1000" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item android:right="16dp">
