<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:background="@color/md_white_1000"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/flight_reservation" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginBottom="@dimen/margin_12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_booking_flight"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_gradient_green"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/booking"
                android:textAllCaps="false"
                android:textColor="@color/md_white_1000"
                android:textSize="16sp" />

            <Button
                android:layout_marginStart="8dp"
                android:id="@+id/button_reimbursement_flight"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_gradient_green"
                android:backgroundTint="#F59C1A"
                android:text="@string/reimbursement"
                android:textAllCaps="false"
                android:textColor="@color/md_white_1000"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:background="@color/md_white_1000"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/hotel_reservation" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginBottom="@dimen/margin_12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_booking_hotel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_gradient_green"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/booking"
                android:textAllCaps="false"
                android:textColor="@color/md_white_1000"
                android:textSize="16sp" />

            <Button
                android:layout_marginStart="8dp"
                android:id="@+id/button_reimbursement_hotel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_gradient_green"
                android:backgroundTint="#F59C1A"
                android:text="@string/reimbursement"
                android:textAllCaps="false"
                android:textColor="@color/md_white_1000"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>