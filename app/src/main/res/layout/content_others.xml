<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_others"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_4dp"
    android:background="@color/md_white_1000"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_12dp"
    android:paddingBottom="@dimen/padding_10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Others" />

    <CheckBox
        android:id="@+id/checkBox_cost_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:onClick="onCheckboxClicked"
        android:text="Other Cost Center (Khusus kegiatan training menggunakan Cost Center HC)"
        android:textColor="@color/colorPrimary" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_cost_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/padding_16dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/editText_cost_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cost Center"
            android:inputType="text"
            android:textColor="@color/colorTextBlack" />

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/checkBox_diskresi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:onClick="onCheckboxClicked"
        android:text="Diskresi (Dipilih apabila karyawan membutuhkan fasilitas diluar limit ketentuan perusahaan)"
        android:textColor="@color/colorPrimary" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_diskresi_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/padding_16dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/editText_diskresi_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Diskresi Type"
            android:inputType="text"
            android:textColor="@color/colorTextBlack" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_diskresi_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/padding_16dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/editText_diskresi_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reason"
            android:inputType="text"
            android:textColor="@color/colorTextBlack" />

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/checkBox_makan_malam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="Makan malam ditanggung (Dipilih apabila mendapatkan fasilitas)"
        android:textColor="@color/colorPrimary" />
</LinearLayout>